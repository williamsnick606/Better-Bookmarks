{
    "name"             : "Better Bookmarks",
    "version"          : "0.01",
    "description"      : "Uses machine learning to automatically recommend where to place your bookmarks.",
    "manifest_version" : 2,
    "permissions"      : [ "bookmarks"
                         , "storage"
                         , "activeTab"
                         , "tabs"
                         , "http://*/*"
                         , "https://*/*"
                         ],
    "background": {
        "scripts"    : [ "js/background_scripts/on_installed.js"
                       , "js/background_scripts/on_removed.js"
                       ],
        "persistent" : false
    },
    "browser_action": {
        "default_title" : "Better Bookmarks",
        "default_icon"  : "icon.png",
        "default_popup" : "views/popup.html"
    }
}
